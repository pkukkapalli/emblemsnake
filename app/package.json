{
  "scripts": {
    "lint:eslint": "eslint --ext .ts,.html . --ignore-path .gitignore",
    "format:eslint": "eslint --ext .ts,.html . --fix --ignore-path .gitignore",
    "lint:prettier": "prettier \"**/*.js\" \"**/*.ts\" --check --ignore-path .gitignore",
    "format:prettier": "prettier \"**/*.js\" \"**/*.ts\" --write --ignore-path .gitignore",
    "lint": "npm run lint:eslint && npm run lint:prettier",
    "format": "npm run format:eslint && npm run format:prettier",
    "test": "npm run tsc-main:build && npm run tsc-worker:build && npm run tsc-test:build && karma start --coverage",
    "test:watch": "concurrently --kill-others --names tsc,karma \"npm run tsc-main:watch\" \"npm run tsc-worker:watch\" \"npm run tsc-test:watch\" \"karma start --auto-watch=true --single-run=false\"",
    "build": "rimraf dist && npm run tsc-main:build && npm run tsc-worker:build && rollup -c rollup.config.js",
    "start:build": "npm run build && es-dev-server --root-dir dist --app-index index.html --open --compatibility none",
    "start": "concurrently --kill-others --names tsc,es-dev-server \"npm run tsc-main:watch\" \"npm run tsc-worker:watch\" \"es-dev-server --app-index index.html --node-resolve --open --watch\"",
    "tsc-main:build": "tsc -b tsconfig.main.json",
    "tsc-main:watch": "tsc -b tsconfig.main.json --watch",
    "tsc-worker:build": "tsc -b tsconfig.worker.json",
    "tsc-worker:watch": "tsc -b tsconfig.worker.json --watch",
    "tsc-test:build": "tsc -b tsconfig.test.json",
    "tsc-test:watch": "tsc -b tsconfig.test.json --watch"
  },
  "devDependencies": {
    "eslint": "^6.1.0",
    "@open-wc/eslint-config": "^2.0.0",
    "@typescript-eslint/eslint-plugin": "^2.20.0",
    "@typescript-eslint/parser": "^2.20.0",
    "prettier": "^2.0.4",
    "eslint-config-prettier": "^6.11.0",
    "husky": "^1.0.0",
    "lint-staged": "^8.0.0",
    "@open-wc/testing-karma": "^3.0.0",
    "deepmerge": "^3.2.0",
    "@open-wc/testing": "^2.0.0",
    "@open-wc/building-rollup": "^1.0.0",
    "rimraf": "^2.6.3",
    "rollup": "^2.3.4",
    "@types/node": "13.11.1",
    "es-dev-server": "^1.5.0",
    "typescript": "^3.8.2",
    "concurrently": "^5.1.0",
    "tslib": "^1.11.0"
  },
  "prettier": {
    "singleQuote": true,
    "arrowParens": "avoid"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "prettier --write",
      "git add"
    ]
  },
  "name": "emblem-app",
  "version": "0.0.0",
  "description": "Webcomponent emblem-app following open-wc recommendations",
  "author": "emblem-app",
  "license": "MIT",
  "dependencies": {
    "@polymer/iron-icon": "^3.0.1",
    "@polymer/iron-icons": "^3.0.1",
    "@polymer/paper-button": "^3.0.1",
    "@polymer/paper-icon-button": "^3.0.2",
    "@polymer/paper-spinner": "^3.0.2",
    "lit-element": "^2.0.1",
    "lit-html": "^1.0.0",
    "pwa-helpers": "^0.9.1"
  }
}
